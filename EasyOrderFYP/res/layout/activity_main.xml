<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!--  Button to view all products screen -->

    <!--  Button to view all products screen -->
    
    <!--  Button for eat-in -->
    
        <!--  Button for take-away -->

    <Button
        android:id="@+id/btnEatIn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/eat_in" />

    <Button
        android:id="@+id/btnViewProducts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTakeAway"
        android:layout_centerVertical="true"
        android:text="@string/view_products" />

    <Button
        android:id="@+id/btnScanItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnViewProducts"
        android:layout_below="@+id/btnViewProducts"
        android:layout_marginTop="43dp"
        android:text="@string/scan_items" />

    <Button
        android:id="@+id/btnTakeAway"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEatIn"
        android:layout_below="@+id/btnEatIn"
        android:layout_marginTop="36dp"
        android:text="@string/take_away" />
    
</RelativeLayout>